<% layout('boilerplate') %>

<h1 class="text-center">Add Product</h1>

<div class="mt-5 col-md-8 offset-md-2 col-xl-6 offset-xl-3" >
    <form action="/products/<%=product.id%>?_method=PUT" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label class="form-label" for="name">Name</label>
            <input class="form-control" type="text" id="name" name="product[name]" value="<%=product.name%>" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="category">Category</label>
            <input class="form-control" type="text" id="category" name="product[category]" value="<%=product.category%>" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="price">Price</label>
            <input class="form-control" type="text" id="price" name="product[price]" value="<%=product.price%>" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" id="description" name="product[description]" value=rows="5" required>
                <%=product.description%>
            </textarea>
        </div>
        <button class="btn btn-success">Edit Product</button>
    </form>
</div>