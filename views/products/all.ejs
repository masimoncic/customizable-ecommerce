<% layout('boilerplate') %>

<% for(let i = products.length-1; i >= 0; i--) { %>


  <div class="card mb-3 col-md-8 offset-md-2">
    <div class="row">
        <div class="col-4">
          <%if(products[i].images.length) {%>
              <img class="img-fluid" alt="" src="<%=products[i].images[0].thumbnail%>">
          <% } %>
        </div>
        <div class="col-8">
          <div class="card-body">
            <a href="/products/<%=products[i].id%>"><%= products[i].name %></a>
            <p class="card-text">
              <small class="text-muted"><%= products[i].category%></small>
            </p>
            <p class="card-text"><%=products[i].description%></p>
            <p class="card-text">$<%=products[i].price%></p>
          </div>
        </div>
      </div>
  </div>





<% } %>


