<% layout('boilerplate') %>

<h1 class="text-center">Categories</h1>



<div class="col-8 offset-2">
  <% for(let i = 0; i < categories.length; i++) {%>
    <p><%=categories[i]%></p>
    <form action="/admin/categories/<%=categories[i]%>?_method=DELETE" method="POST">
      <button class="btn btn-danger mb-5">Delete</button> 
    </form>
<% } %>
  <form action="/admin/categories" method="POST" novalidate class="needs-validation">
    <div class="mb-3">
      <label class="form-label" for="newCategory">Add Category</label>
      <input class="form-control mb-3" type="text" id="newCategory" name="newCategory" required>
      <button class="btn btn-success mb-3">Submit</button>
    </div>
  </form>
</div>

